<footer class="site-footer">
  <div class="footer-inner container">
    <div class="footer-content">
      <div class="footer-section about">
        <h3 class="footer-title"><%= config.title %></h3>
        <p class="footer-description">
          <%= config.description || '基于Hexo的微信风格主题博客' %>
        </p>
        <% if (theme.footer && theme.footer.social_links) { %>
          <div class="social-links">
            <% for (let platform in theme.footer.social_links) { %>
              <a href="<%= theme.footer.social_links[platform] %>" class="social-link" target="_blank" rel="noopener noreferrer" title="<%= platform %>">
                <% if (platform === 'github') { %>
                  <i class="fab fa-github"></i>
                <% } else if (platform === 'twitter') { %>
                  <i class="fab fa-twitter"></i>
                <% } else if (platform === 'facebook') { %>
                  <i class="fab fa-facebook-f"></i>
                <% } else if (platform === 'linkedin') { %>
                  <i class="fab fa-linkedin-in"></i>
                <% } else if (platform === 'instagram') { %>
                  <i class="fab fa-instagram"></i>
                <% } else if (platform === 'weibo') { %>
                  <i class="fab fa-weibo"></i>
                <% } else if (platform === 'wechat') { %>
                  <i class="fab fa-weixin"></i>
                <% } else if (platform === 'qq') { %>
                  <i class="fab fa-qq"></i>
                <% } else if (platform === 'email') { %>
                  <i class="fas fa-envelope"></i>
                <% } else { %>
                  <i class="fas fa-link"></i>
                <% } %>
              </a>
            <% } %>
          </div>
        <% } %>
      </div>
      
      <div class="footer-section links">
        <h3 class="footer-title">快速链接</h3>
        <ul class="footer-links">
          <% for (let item in theme.menu) { %>
            <li>
              <a href="<%= url_for(theme.menu[item]) %>">
                <%= __(item) || item.charAt(0).toUpperCase() + item.slice(1) %>
              </a>
            </li>
          <% } %>
        </ul>
      </div>
      
      <div class="footer-section subscribe">
        <h3 class="footer-title">订阅更新</h3>
        <p>订阅最新文章通知</p>
        <div class="subscribe-form">
          <input type="email" placeholder="您的邮箱地址" class="subscribe-input">
          <button class="subscribe-button">订阅</button>
        </div>
        <% if (theme.footer && theme.footer.subscribe_description) { %>
          <p class="subscribe-description"><%= theme.footer.subscribe_description %></p>
        <% } else { %>
          <p class="subscribe-description">我们将定期发送最新文章和更新通知</p>
        <% } %>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="copyright">
        &copy; <%= new Date().getFullYear() %> <%= config.title %>
        <% if (theme.footer && theme.footer.copyright) { %>
          | <%= theme.footer.copyright %>
        <% } else { %>
          | 由 <a href="https://hexo.io" target="_blank" rel="noopener noreferrer">Hexo</a> 驱动
        <% } %>
      </div>
      
      <div class="powered-by">
        <a href="https://github.com/yourusername/hexo-theme-wechat-style" target="_blank" rel="noopener noreferrer">
          微信风格主题
        </a>
      </div>
    </div>
  </div>
  
  <% if (theme.footer && theme.footer.show_view_count) { %>
    <div class="site-stats">
      <div class="container">
        <div class="stats-item">
          <i class="fas fa-file-alt"></i>
          <span class="stats-count"><%= site.posts.length %></span>
          <span class="stats-text">文章</span>
        </div>
        <div class="stats-item">
          <i class="fas fa-folder"></i>
          <span class="stats-count"><%= site.categories.length %></span>
          <span class="stats-text">分类</span>
        </div>
        <div class="stats-item">
          <i class="fas fa-tags"></i>
          <span class="stats-count"><%= site.tags.length %></span>
          <span class="stats-text">标签</span>
        </div>
        <div class="stats-item">
          <i class="fas fa-eye"></i>
          <span class="stats-count" id="total-visits">0</span>
          <span class="stats-text">访问</span>
        </div>
      </div>
    </div>
  <% } %>
</footer>

<style>
  .site-footer {
    background-color: var(--footer-bg);
    padding: 50px 0 20px;
    margin-top: 50px;
    color: var(--text-color);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-bottom: 30px;
  }
  
  .footer-title {
    font-size: 1.2rem;
    margin-bottom: 15px;
    color: var(--text-color);
    position: relative;
    padding-bottom: 10px;
  }
  
  .footer-title:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background-color: var(--theme-color);
  }
  
  .footer-description {
    margin-bottom: 15px;
    color: var(--text-color-light);
    line-height: 1.6;
  }
  
  .social-links {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: var(--theme-color-light);
    color: var(--theme-color);
    border-radius: 50%;
    transition: all 0.3s;
  }
  
  .social-link:hover {
    background-color: var(--theme-color);
    color: white;
    transform: translateY(-3px);
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 10px;
  }
  
  .footer-links a {
    color: var(--text-color-light);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer-links a:hover {
    color: var(--theme-color);
  }
  
  .subscribe-form {
    display: flex;
    margin-bottom: 10px;
  }
  
  .subscribe-input {
    flex: 1;
    padding: 10px;
    border: 1px solid var(--border-color);
    border-radius: 4px 0 0 4px;
    font-size: 0.9rem;
    background-color: var(--bg-color);
    color: var(--text-color);
  }
  
  .subscribe-button {
    padding: 10px 15px;
    background-color: var(--theme-color);
    color: white;
    border: none;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background-color 0.2s;
  }
  
  .subscribe-button:hover {
    background-color: #06a050;
  }
  
  .subscribe-description {
    font-size: 0.8rem;
    color: var(--text-color-lighter);
    margin-top: 10px;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid var(--border-color);
    font-size: 0.9rem;
    color: var(--text-color-lighter);
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .footer-bottom a {
    color: var(--theme-color);
    text-decoration: none;
  }
  
  .site-stats {
    background-color: var(--theme-color-light);
    padding: 15px 0;
    margin-top: 30px;
  }
  
  .site-stats .container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
  }
  
  .stats-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 80px;
  }
  
  .stats-item i {
    font-size: 1.5rem;
    color: var(--theme-color);
    margin-bottom: 5px;
  }
  
  .stats-count {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--text-color);
  }
  
  .stats-text {
    font-size: 0.9rem;
    color: var(--text-color-light);
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .site-stats .container {
      justify-content: space-between;
    }
    
    .stats-item {
      min-width: 60px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Generate random total visits for demo
    var totalVisitsElement = document.getElementById('total-visits');
    if (totalVisitsElement) {
      var randomVisits = Math.floor(Math.random() * 10000) + 1000;
      totalVisitsElement.textContent = randomVisits;
    }
    
    // Handle subscribe button click
    var subscribeButton = document.querySelector('.subscribe-button');
    if (subscribeButton) {
      subscribeButton.addEventListener('click', function() {
        var emailInput = document.querySelector('.subscribe-input');
        var email = emailInput.value.trim();
        
        if (email && /^\S+@\S+\.\S+$/.test(email)) {
          alert('感谢您的订阅！');
          emailInput.value = '';
        } else {
          alert('请输入有效的邮箱地址');
        }
      });
    }
  });
</script> 