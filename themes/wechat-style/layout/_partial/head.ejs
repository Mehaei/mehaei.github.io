<!-- 主题配置 -->
<%- css('css/style.css') %>
<%- css('css/code-highlight.css') %>
<%- css('css/code-copy.css') %>
<%- css('css/search-fix.css') %>

<!-- GitHub Token配置 -->
<% if (theme.github && theme.github.token) { %>
<script>
  window.GITHUB_TOKEN = '<%= theme.github.token %>';
</script>
<% } %>

<!-- 访问量统计 -->
<%- js('js/post-views.js') %>

<!-- 在已有内容的基础上添加 -->
<%- js('js/pagination.js') %>

<!-- 在其他CSS文件后引入 -->
<%- css('css/footer-stats.css') %>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="description" content="<%= config.description || theme.description %>">
  <meta name="keywords" content="<%= config.keywords || theme.keywords %>">
  <meta name="author" content="<%= config.author || theme.author %>">
  
  <title><%= title %></title>
  
  <!-- 使用配置中的 favicon -->
  <link rel="icon" href="<%= url_for(theme.favicon) %>" type="image/gif">
  <link rel="shortcut icon" href="<%= url_for(theme.favicon) %>" type="image/gif">
  <link rel="apple-touch-icon" href="<%= url_for(theme.favicon) %>">
  
  <!-- 引入 Font Awesome 等其他资源 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/all.min.css">

  <!-- 在其他CSS之后引入搜索样式 -->
  <link rel="stylesheet" href="<%= url_for('/css/search.css') %>">
</head>