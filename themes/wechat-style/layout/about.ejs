<div class="main-wrapper container <%= theme.sidebar.position === 'left' ? 'sidebar-left' : '' %> <%= theme.sidebar.sticky ? 'sidebar-sticky' : '' %>">
  <div class="content-wrap">
    <div class="about-container">
      <div class="about-header">
        <h1 class="about-title"><%= theme.about && theme.about.title ? theme.about.title : '关于我' %></h1>
      </div>

      <div class="about-content">
        <div class="about-profile">
          <div class="profile-avatar">
            <img src="<%- url_for(theme.avatar) %>" alt="头像">
          </div>
          <div class="profile-info">
            <h2><%= config.author %></h2>
            <p class="profile-description"><%= config.description || '欢迎来到我的博客' %></p>
          </div>
        </div>

        <div class="about-stats">
          <div class="stat-item" style="flex: 1 1 30%;">
            <span class="stat-number"><%= site.posts.length %></span>
            <span class="stat-label">文章</span>
          </div>
          <div class="stat-item" style="flex: 1 1 30%;">
            <span class="stat-number"><%= site.categories.length %></span>
            <span class="stat-label">分类</span>
          </div>
          <div class="stat-item" style="flex: 1 1 30%;">
            <span class="stat-number"><%= site.tags.length %></span>
            <span class="stat-label">标签</span>
          </div>
        </div>

        <% if (theme.about.description) { %>
        <div class="about-section">
          <h3>个人简介</h3>
          <p><%= theme.about.description %></p>
        </div>
        <% } %>

        <% if (theme.about.experience) { %>
        <div class="about-section">
          <h3>个人经历</h3>
          <p><%= theme.about.experience %></p>
        </div>
        <% } %>

        <% if (theme.about.hobbies) { %>
        <div class="about-section">
          <h3>兴趣爱好</h3>
          <p><%= theme.about.hobbies %></p>
        </div>
        <% } %>

        <% if (theme.about.projects && theme.about.projects.length > 0) { %>
        <div class="about-section">
          <h3>项目经验</h3>
          <ul>
            <% theme.about.projects.forEach(function(project) { %>
              <li><strong><%= project.name %>：</strong> <%= project.description %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>

        <% if (theme.about.goals) { %>
        <div class="about-section">
          <h3>未来目标</h3>
          <p><%= theme.about.goals %></p>
        </div>
        <% } %>

        <div class="about-section">
          <h3>技能标签</h3>
          <div class="skill-tags">
            <% theme.about.skills.forEach(function(skill) { %>
              <span class="skill-tag"><%= skill %></span>
            <% }) %>
          </div>
        </div>

        <% if (site.data.github) { %>
        <div class="about-section">
          <h3>GitHub 信息</h3>
          <div class="github-info">
            <div class="github-details">
              <h4><a href="<%= site.data.github.html_url %>" target="_blank" rel="noopener noreferrer"><%= site.data.github.name %></a></h4>
              <p><%= site.data.github.bio %></p>
              <div class="github-stats">
                <div class="github-stat-item">
                  <span class="stat-number"><%= site.data.github.public_repos %></span>
                  <span class="stat-label">仓库</span>
                </div>
                <div class="github-stat-item">
                  <span class="stat-number"><%= site.data.github.stars || site.data.github.stargazers_count %></span>
                  <span class="stat-label">获赞</span>
                </div>
                <div class="github-stat-item">
                  <span class="stat-number"><%= site.data.github.followers %></span>
                  <span class="stat-label">粉丝</span>
                </div>
                <div class="github-stat-item">
                  <span class="stat-number"><%= site.data.github.following %></span>
                  <span class="stat-label">关注</span>
                </div>
              </div>
              <div class="github-contributions">
                <h4>贡献统计</h4>
                <img src="https://ghchart.rshah.org/<%= site.data.github.login %>" alt="GitHub贡献图表" class="contribution-chart">
              </div>
              <p class="github-join-date">加入于 <%= new Date(site.data.github.created_at).toLocaleDateString('zh-CN', {year: 'numeric', month: 'long', day: 'numeric'}) %></p>
            </div>
          </div>
        </div>
        <% } %>

        <div class="about-section">
          <h3>联系方式</h3>
          <div class="contact-info">
            <div class="contact-item">
              <img src="<%- url_for('/images/about-wechat.png') %>" alt="微信公众号二维码" class="wechat-qrcode">
              <p>扫一扫关注我的微信公众号</p>
              <%- partial('_partial/social-links') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- partial('_partial/sidebar') %>
</div>

